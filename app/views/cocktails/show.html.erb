<div class="show-container">
  <div class="card" style="width:400px">
    <img class="card-img-top" src="<%= cl_image_path @cocktail.photo.key, height: 300, width: 400, crop: :fill %>" alt="Cocktail image">
    <div class="card-body">
      <h4 class="card-title"><%= @cocktail.name %></h4>
      <ul class="card-text">
        <% @cocktail.doses.each do |dose| %>
          <li><%= dose.description %> - <%= dose.ingredient.name %> - <%= link_to "🗑️", dose_path(dose), method: :delete %></li>
        <% end %>
      </ul>
      <button type="button" class="btn btn-outline-primary"><%= link_to 'Add a DOSE', new_cocktail_doses_path(@cocktail) %></button>
      <button type="button" class="btn btn-outline-primary"><%= link_to 'Back', root_path %></button>
    </div>
  </div>
</div>
