<div class="banner" style="background-color: rgba(255,255,255,0.5);">
  <div class="container">
    <h1><span id="banner-typed-text"></span></h1>
  </div>
  <div id="music-box">
    <iframe src="https://open.spotify.com/embed/playlist/098VClc6SQunLgJ0x0jTTr" width="300" height="80" frameborder="0" allowtransparency="true" allow="encrypted-media" allow="autoplay"></iframe>
  </div>
  <button type="button" class="btn btn-outline-primary btn-lg"><%= link_to 'New COCKTAIL', new_cocktail_path %></button>
</div>

<div class="cards">
  <% @cocktails.each do |cocktail| %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path cocktail.photo.key, height: 300, width: 400, crop: :fill %>')">
      <%= link_to cocktail.name, cocktail %>
    </div>
  <% end %>
</div>

<div class="footer" style="background-color: rgba(255,255,255,0.5);">
  <div class="footer-links">
    <a href="https://www.github.com" target="_blank"><i class="fab fa-github"></i></a>
